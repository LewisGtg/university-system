<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h3>User Profile</h3>
        <% if admin? %>
          <div>
            <%= link_to "Edit", edit_user_path(@user), class: "btn btn-warning btn-sm" %>
            <%= link_to "Back", users_path, class: "btn btn-secondary btn-sm" %>
          </div>
        <% end %>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-sm-3"><strong>Name:</strong></div>
          <div class="col-sm-9"><%= @user.name %></div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-3"><strong>Email:</strong></div>
          <div class="col-sm-9"><%= @user.email %></div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-3"><strong>Phone:</strong></div>
          <div class="col-sm-9"><%= @user.phone %></div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-3"><strong>Academic Record:</strong></div>
          <div class="col-sm-9"><%= @user.academic_record %></div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-3"><strong>Role:</strong></div>
          <div class="col-sm-9">
            <span class="badge bg-<%= @user.admin? ? 'danger' : 'info' %>">
              <%= @user.role.capitalize %>
            </span>
          </div>
        </div>
        
        <% if @user.student? && @user.subjects.any? %>
          <hr>
          <div class="row">
            <div class="col-sm-3"><strong>Enrolled Subjects:</strong></div>
            <div class="col-sm-9">
              <% @user.subjects.each do |subject| %>
                <span class="badge bg-primary me-1"><%= subject.name %></span>
              <% end %>
            </div>
          </div>
        <% end %>
        
        <% if @user.monitored_subject %>
          <hr>
          <div class="row">
            <div class="col-sm-3"><strong>Monitor of:</strong></div>
            <div class="col-sm-9">
              <span class="badge bg-success"><%= @user.monitored_subject.name %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>