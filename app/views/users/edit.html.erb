<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h3>Editar Usuário</h3>
      </div>
      <div class="card-body">
        <%= form_with model: @user, local: true do |form| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <h4><%= pluralize(@user.errors.count, "erro") %> impediram que este usuário fosse salvo:</h4>
              <ul class="mb-0">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :name, "Nome", class: "form-label" %>
            <%= form.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :email, "E-mail", class: "form-label" %>
            <%= form.email_field :email, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :phone, "Telefone", class: "form-label" %>
            <%= form.text_field :phone, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :academic_record, "Registro Acadêmico", class: "form-label" %>
            <%= form.text_field :academic_record, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :role, "Função", class: "form-label" %>
            <%= form.select :role, options_for_select([['Estudante', 'student'], ['Administrador', 'admin']], @user.role), 
                {}, { class: "form-select" } %>
          </div>

          <div class="mb-3">
            <%= form.label :password, "Nova Senha (deixe em branco para manter a atual)", class: "form-label" %>
            <%= form.password_field :password, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :password_confirmation, "Confirmação da Senha", class: "form-label" %>
            <%= form.password_field :password_confirmation, class: "form-control" %>
          </div>

          <div class="d-flex gap-2">
            <%= form.submit "Atualizar Usuário", class: "btn btn-primary" %>
            <%= link_to "Cancelar", users_path, class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>