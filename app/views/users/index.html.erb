<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Users</h1>
  <%= link_to "Add New User", new_user_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="card-body">
    <% if @users.any? %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Academic Record</th>
              <th>Role</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.academic_record %></td>
                <td>
                  <span class="badge bg-<%= user.admin? ? 'danger' : 'info' %>">
                    <%= user.role.capitalize %>
                  </span>
                </td>
                <td>
                  <%= link_to "View", user_path(user), class: "btn btn-sm btn-outline-primary" %>
                  <%= link_to "Edit", edit_user_path(user), class: "btn btn-sm btn-outline-warning" %>
                  <%= link_to "Delete", user_path(user), method: :delete, 
                      data: { confirm: "Are you sure?" }, 
                      class: "btn btn-sm btn-outline-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-muted">No users found.</p>
    <% end %>
  </div>
</div>