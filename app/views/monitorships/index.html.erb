<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Monitorias</h1>
  <%= link_to "Atribuir Novo Monitor", new_monitorship_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="card-body">
    <% if @monitorships.any? %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Disciplina</th>
              <th>Código da Disciplina</th>
              <th>Monitor</th>
              <th>E-mail do Monitor</th>
              <th>Data de Atribuição</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @monitorships.each do |monitorship| %>
              <tr>
                <td><%= monitorship.subject.name %></td>
                <td><%= monitorship.subject.code %></td>
                <td><%= monitorship.user.name %></td>
                <td><%= monitorship.user.email %></td>
                <td><%= monitorship.created_at.strftime("%d de %B de %Y") %></td>
                <td>
                  <%= link_to "Ver", monitorship_path(monitorship), class: "btn btn-sm btn-outline-primary" %>
                  <%= link_to "Remover", monitorship_path(monitorship), method: :delete, 
                      data: { confirm: "Remover #{monitorship.user.name} como monitor de #{monitorship.subject.name}?" }, 
                      class: "btn btn-sm btn-outline-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-muted">Nenhum monitor atribuído ainda.</p>
    <% end %>
  </div>
</div>