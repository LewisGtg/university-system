<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Subjects</h1>
  <% if admin? %>
    <%= link_to "Add New Subject", new_subject_path, class: "btn btn-primary" %>
  <% end %>
</div>

<div class="card">
  <div class="card-body">
    <% if @subjects.any? %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Code</th>
              <th>Students</th>
              <th>Monitor</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @subjects.each do |subject| %>
              <tr>
                <td><%= subject.name %></td>
                <td><%= subject.code %></td>
                <td><%= subject.students.count %></td>
                <td>
                  <% if subject.monitor %>
                    <span class="badge bg-success"><%= subject.monitor.name %></span>
                  <% else %>
                    <span class="text-muted">No monitor</span>
                  <% end %>
                </td>
                <td>
                  <%= link_to "View", subject_path(subject), class: "btn btn-sm btn-outline-primary" %>
                  <% if admin? %>
                    <%= link_to "Edit", edit_subject_path(subject), class: "btn btn-sm btn-outline-warning" %>
                    <%= link_to "Delete", subject_path(subject), method: :delete, 
                        data: { confirm: "Are you sure?" }, 
                        class: "btn btn-sm btn-outline-danger" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-muted">No subjects found.</p>
    <% end %>
  </div>
</div>