<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h3>Editar Disciplina</h3>
      </div>
      <div class="card-body">
        <%= form_with model: @subject, local: true do |form| %>
          <% if @subject.errors.any? %>
            <div class="alert alert-danger">
              <h4><%= pluralize(@subject.errors.count, "error") %> prohibited this subject from being saved:</h4>
              <ul class="mb-0">
                <% @subject.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :nome, class: "form-label" %>
            <%= form.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :código, class: "form-label" %>
            <%= form.text_field :code, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :descrição, class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 4 %>
          </div>

          <div class="d-flex gap-2">
            <%= form.submit "Atualizar disciplina", class: "btn btn-primary" %>
            <%= link_to "Cancelar", subjects_path, class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>